<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/lay"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainlayComplain"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView101"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/complain_id"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/confromnow" />

            <TextView
                android:id="@+id/tvComplain"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView101"
                app:layout_constraintEnd_toStartOf="@+id/confromnow"
                app:layout_constraintStart_toEndOf="@+id/textView101"
                app:layout_constraintTop_toTopOf="@+id/textView101" />
            <androidx.cardview.widget.CardView
                android:id="@+id/paynow1"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="@dimen/dp_50"
                app:cardElevation="@dimen/dp_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvPayNow1"
                    style="@style/normaltxt_13sp_Bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_5"
                    android:text="@string/pending"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paynow"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_32"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvPayNow"
                    style="@style/normaltxt_13sp_Bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_5"
                    android:text="@string/pending"
                    android:textColor="@color/orange" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/confromnow"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_32"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/dp_50"
                app:cardElevation="@dimen/dp_2"
                app:layout_constraintBottom_toBottomOf="@+id/paynow"
                app:layout_constraintEnd_toStartOf="@+id/paynow"
                app:layout_constraintTop_toTopOf="@+id/paynow">

                <TextView
                    android:id="@+id/tvconfrmNow"
                    style="@style/normaltxt_13sp_Bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dp_5"
                    android:text="@string/accept"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView104"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:text="Service Category :"
                app:layout_constraintStart_toStartOf="@+id/textView101"
                app:layout_constraintTop_toBottomOf="@+id/textView101" />

            <TextView
                android:id="@+id/tvServiceName"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/textView104"
                app:layout_constraintEnd_toEndOf="@+id/tvComplain"
                app:layout_constraintStart_toEndOf="@+id/textView104"
                app:layout_constraintTop_toTopOf="@+id/textView104" />
            <TextView
                android:id="@+id/textView1041"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="Complaint Name :"
                app:layout_constraintStart_toStartOf="@+id/textView104"
                app:layout_constraintTop_toBottomOf="@+id/textView104" />

            <TextView
                android:id="@+id/tvComplainName"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView1041"
                app:layout_constraintEnd_toStartOf="@+id/confromnow"
                app:layout_constraintStart_toEndOf="@+id/textView1041"
                app:layout_constraintTop_toTopOf="@+id/textView1041" />

            <TextView
                android:id="@+id/tvdes"
                style="@style/normaltxt_10sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView105"
                app:layout_constraintStart_toStartOf="@+id/textView1041"
                app:layout_constraintTop_toTopOf="@+id/textView105" />

            <TextView
                android:id="@+id/textView105"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:lineHeight="@dimen/_15ssp"
                android:layout_marginStart="5dp"
                style="@style/normaltxt_10sp_Regular"
                app:layout_constraintEnd_toEndOf="@+id/paynow"
                app:layout_constraintStart_toEndOf="@+id/tvdes"
                app:layout_constraintTop_toBottomOf="@+id/textView1041" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyChildGatePassHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/textView105"
                app:layout_constraintStart_toStartOf="@+id/tvdes"
                app:layout_constraintTop_toBottomOf="@+id/textView105" />
