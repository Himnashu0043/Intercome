                     </androidx.constraintlayout.widget.ConstraintLayout>-->

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/normaltxt_14sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/visitor_s_name"
                        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                    <EditText
                        android:id="@+id/ed_Name"
                        style="@style/normaltxt_14sp_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/common_bg"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_visitor_s_name"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                        app:layout_constraintStart_toStartOf="@+id/textView5"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/textView51"
                        style="@style/normaltxt_14sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/visitor_s_phone_number"
                        app:layout_constraintStart_toStartOf="@+id/ed_Name"
                        app:layout_constraintTop_toBottomOf="@+id/ed_Name" />

                    <EditText
                        android:id="@+id/ed_phone"
                        style="@style/normaltxt_14sp_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/common_bg"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_visitor_s_name"
                        android:inputType="number"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        app:layout_constraintEnd_toEndOf="@+id/ed_Name"
                        app:layout_constraintStart_toStartOf="@+id/ed_Name"
                        app:layout_constraintTop_toBottomOf="@+id/textView51" />

                    <TextView
                        android:id="@+id/textView511"
                        style="@style/normaltxt_14sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/visitor_address"
                        app:layout_constraintStart_toStartOf="@+id/ed_phone"
                        app:layout_constraintTop_toBottomOf="@+id/ed_phone" />

                    <EditText
                        android:id="@+id/ed_address"
                        style="@style/normaltxt_14sp_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/common_bg"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/enter_visitor_s_address"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        app:layout_constraintEnd_toEndOf="@+id/ed_Name"
                        app:layout_constraintStart_toStartOf="@+id/ed_Name"
                        app:layout_constraintTop_toBottomOf="@+id/textView511" />

                    <TextView
                        android:id="@+id/textView5111"
                        style="@style/normaltxt_14sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/note"
                        app:layout_constraintStart_toStartOf="@+id/ed_address"
                        app:layout_constraintTop_toBottomOf="@+id/ed_address" />

                    <TextView
                        style="@style/normaltxt_12sp_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_company_service_name_etc"
                        android:textColor="@color/grey"
                        app:layout_constraintBottom_toBottomOf="@+id/textView5111"
                        app:layout_constraintStart_toEndOf="@+id/textView5111" />

                    <EditText
                        android:id="@+id/ed_numberofVisitor"
                        style="@style/normaltxt_14sp_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/common_bg"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/note"
                        android:inputType="text"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        app:layout_constraintEnd_toEndOf="@+id/ed_Name"
                        app:layout_constraintStart_toStartOf="@+id/ed_Name"
                        app:layout_constraintTop_toBottomOf="@+id/textView5111" />

                    <TextView
                        android:id="@+id/textView51111"
                        style="@style/normaltxt_14sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/relationship_with_you"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/ed_numberofVisitor"
                        app:layout_constraintTop_toBottomOf="@+id/ed_numberofVisitor" />

                    <Spinner
                        android:id="@+id/selectSpiner"
                        style="@style/normaltxt_14sp_Regular"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/cus_sp"
                        android:gravity="fill_vertical"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/ed_numberofVisitor"
                        app:layout_constraintStart_toStartOf="@+id/ed_numberofVisitor"
                        app:layout_constraintTop_toBottomOf="@+id/textView51111" />

                    <TextView
                        android:id="@+id/textView511111"
                        style="@style/normaltxt_14sp_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="@string/upload_image"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="@+id/ed_numberofVisitor"
                        app:layout_constraintTop_toBottomOf="@+id/selectSpiner" />

                    <EditText
                        android:id="@+id/ed_uploadImg"
                        style="@style/normaltxt_14sp_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/common_bg"
                        android:drawableEnd="@drawable/cam_icon2"
                        android:focusable="false"
                        android:fontFamily="@font/medium"
                        android:gravity="center_vertical"
                        android:hint="@string/upload_image"
                        android:inputType="number"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/ed_numberofVisitor"
                        app:layout_constraintStart_toStartOf="@+id/textView511111"
                        app:layout_constraintTop_toBottomOf="@+id/textView511111" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageView90"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/add_photo_img"
                        app:layout_constraintStart_toStartOf="@+id/ed_numberofVisitor"
                        app:layout_constraintTop_toBottomOf="@+id/selectSpiner"
                        app:shapeAppearanceOverlay="@style/service_10_imge_shapeable_overloay" />

                    <include
                        android:id="@+id/common_btn"
                        layout="@layout/common_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_46"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/ed_numberofVisitor"
                        app:layout_constraintStart_toStartOf="@+id/ed_numberofVisitor"
                        app:layout_constraintTop_toBottomOf="@+id/imageView90" />

                    <ProgressBar
                        android:id="@+id/pro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="visible">

        <include
            android:id="@+id/nav"
            layout="@layout/user_nav_drw" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>