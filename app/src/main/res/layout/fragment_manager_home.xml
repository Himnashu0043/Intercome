<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.home.ManagerHomeFragment">

    <include
        android:id="@+id/user_homeToolbar"
        layout="@layout/new_owner_tanant_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/manL"
        app:layout_constraintTop_toBottomOf="@+id/user_homeToolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_recent_complaint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/bold"
                    android:text="@string/recent_complaint"
                    android:textColor="#20222C"
                    android:visibility="visible"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recent_complaint_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/bold"
                android:text="@string/view_all"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="@+id/tv_recent_complaint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_recent_complaint" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_recent_complaint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent_complaint" />

            <TextView
                android:id="@+id/tv_services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:text="@string/services"
                android:visibility="gone"
                android:textColor="#20222C"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="@+id/rv_recent_complaint"
                app:layout_constraintTop_toBottomOf="@+id/rv_recent_complaint" />

            <TextView
                android:id="@+id/tv_service_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="@string/view_all"
                android:visibility="gone"
                android:textColor="#FD701E"
                app:layout_constraintBottom_toBottomOf="@+id/tv_services"
                app:layout_constraintEnd_toEndOf="@+id/rv_recent_complaint"
                app:layout_constraintTop_toTopOf="@+id/tv_services" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_services" />

            <TextView
                android:id="@+id/tv_unpaid_bills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:text="@string/unpaid_billings"
                android:textColor="#20222C"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_home_service" />

            <TextView
                android:id="@+id/tv_unpaid_bills_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:text="@string/view_all"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="@+id/tv_unpaid_bills"
                app:layout_constraintEnd_toEndOf="@+id/rv_home_service"
                app:layout_constraintTop_toTopOf="@+id/tv_unpaid_bills" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_unpaid_billing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@+id/tv_unpaid_bills_view_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_unpaid_bills" />

            <TextView
                android:id="@+id/tv_bills_to_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:text="@string/approval"
                android:textColor="#20222C"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_unpaid_billing" />

            <TextView
                android:id="@+id/tv_bills_to_approve_view_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/bold"
                android:text="@string/view_all"
                android:textColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="@+id/tv_bills_to_approve"
                app:layout_constraintEnd_toEndOf="@+id/rv_home_service" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_bills_to_approve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_bills_to_approve_view_all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_bills_to_approve" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>