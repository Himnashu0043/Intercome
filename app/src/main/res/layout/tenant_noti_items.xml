    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chat_icon" />

        <TextView
            android:id="@+id/tvMainTittle"
            style="@style/normaltxt_14sp_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView61"
            app:layout_constraintStart_toEndOf="@+id/imageView60"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDes"
            style="@style/normaltxt_12sp_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toStartOf="@+id/imageView61"
            app:layout_constraintStart_toStartOf="@+id/tvMainTittle"
            app:layout_constraintTop_toBottomOf="@+id/tvMainTittle" />

        <TextView
            android:id="@+id/textView291"
            style="@style/normaltxt_12sp_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:textColor="@color/lightBlue"
            app:layout_constraintStart_toStartOf="@+id/tvDes"
            app:layout_constraintTop_toBottomOf="@+id/tvDes" />

        <ImageView
            android:id="@+id/imageView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:tint="@color/black"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/tvDes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvMainTittle"
            app:srcCompat="@drawable/list_hozi_icon" />

        <androidx.cardview.widget.CardView
            android:id="@+id/paynow"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="@dimen/dp_50"
            app:cardElevation="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView291">

            <TextView
                android:id="@+id/tvPayNow"
                style="@style/normaltxt_13sp_Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_5"
                android:text="@string/reject"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/confromnow"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_32"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="@dimen/dp_50"
            app:cardElevation="@dimen/dp_2"
            app:layout_constraintBottom_toBottomOf="@+id/paynow"
            app:layout_constraintEnd_toStartOf="@+id/paynow"
            app:layout_constraintTop_toTopOf="@+id/paynow">

            <TextView
                android:id="@+id/tvconfrmNow"
                style="@style/normaltxt_13sp_Bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_5"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>