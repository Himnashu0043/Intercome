<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:background="#FFFFFF"
    app:cardCornerRadius="@dimen/_12sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_8sdp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:background="@android:color/transparent"
            android:foregroundGravity="bottom"
            app:layout_constraintBottom_toBottomOf="@+id/view_pager1"
            app:layout_constraintEnd_toEndOf="@+id/view_pager1"
            app:layout_constraintStart_toStartOf="@+id/view_pager1"
            app:tabBackground="@drawable/drawable_vp_tab_indicator_selector"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="0dp"
            app:tabPaddingEnd="10dp"
            app:tabPaddingStart="10dp" />

        <ImageView
            android:id="@+id/iv_property"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/properties_parking" />

        <!-- <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
