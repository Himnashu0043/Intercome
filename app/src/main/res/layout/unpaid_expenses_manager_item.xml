<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView147"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:shapeAppearanceOverlay="@style/service_10_imge_shapeable_overloay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_billing_list" />

            <TextView
                android:id="@+id/textView255"
                style="@style/normaltxt_14sp_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView149"
                app:layout_constraintStart_toEndOf="@+id/imageView147"
                app:layout_constraintTop_toTopOf="@+id/imageView147" />

            <TextView
                android:id="@+id/textView256"
                style="@style/normaltxt_12sp_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ref No."
                android:textColor="@color/new_light_sileti"
                app:layout_constraintStart_toStartOf="@+id/textView255"
                app:layout_constraintTop_toBottomOf="@+id/textView255" />

            <TextView
                android:id="@+id/textView258"
                style="@style/normaltxt_12sp_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView256"
                app:layout_constraintStart_toEndOf="@+id/textView256"
                app:layout_constraintTop_toTopOf="@+id/textView256" />

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_3sdp"
                android:layout_height="@dimen/_3sdp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_dot"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/textView256"
                app:layout_constraintStart_toEndOf="@+id/textView258"
                app:layout_constraintTop_toTopOf="@+id/textView256" />

            <TextView
                android:id="@+id/textView259"
                style="@style/normaltxt_12sp_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/new_light_sileti"
                app:layout_constraintBottom_toBottomOf="@+id/textView256"
                app:layout_constraintStart_toEndOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/textView256" />

            <ImageView
                android:id="@+id/imageView148"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView147"
                app:srcCompat="@drawable/list_icon" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/listPop"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/imageView148"
                app:layout_constraintTop_toTopOf="@+id/imageView148">

                <TextView
                    android:id="@+id/tvEdit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/edit"
                    android:textColor="@color/lightBlack"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvInActive"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/delete"
                    android:textColor="@color/lightBlack"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvEdit" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/listPopnew"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/imageView148"
                app:layout_constraintTop_toTopOf="@+id/imageView148">

                <TextView
                    android:id="@+id/tvEdit1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/billing"
                    android:textColor="@color/lightBlack"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvInActive1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Invoice"
                    android:textColor="@color/lightBlack"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvEdit1" />

                <TextView
                    android:id="@+id/tvReport1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Receipt"
                    android:textColor="@color/lightBlack"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvInActive1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/imageView149"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/textView258"
                app:layout_constraintEnd_toStartOf="@+id/imageView148"
                app:layout_constraintTop_toTopOf="@+id/textView255"
                app:srcCompat="@drawable/pdf_icon" />

            <TextView
                android:id="@+id/textView260555"
                style="@style/normaltxt_14sp_extra_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/orange"
                app:layout_constraintStart_toStartOf="@+id/textView256"
                app:layout_constraintTop_toBottomOf="@+id/textView256" />

            <TextView
                android:id="@+id/textView260"
                style="@style/normaltxt_12sp_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:lineHeight="15dp"
                android:gravity="center_vertical"

                android:textColor="@color/dark_grey"
                app:layout_constraintBottom_toTopOf="@+id/tvPayManager"
                app:layout_constraintEnd_toEndOf="@+id/imageView148"
                app:layout_constraintStart_toStartOf="@+id/imageView147"
                app:layout_constraintTop_toBottomOf="@+id/textView260555" />

            <TextView
                android:id="@+id/tvPayManager"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_contact_us_btn"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:visibility="gone"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/pay"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView148"
                app:layout_constraintStart_toStartOf="@+id/imageView147"
                app:layout_constraintTop_toBottomOf="@+id/textView260" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>