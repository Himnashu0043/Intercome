<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_24sdp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/set_date"
                android:textColor="#20222C"
                app:layout_constraintBottom_toTopOf="@+id/edt_date"
                app:layout_constraintStart_toStartOf="@+id/edt_date" />


            <TextView
                android:id="@+id/edt_date"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@drawable/bg_edit_text"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_8sdp"
                android:text="@string/select_date"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/semi_bold"
                android:text="@string/set_time"
                android:textColor="#20222C"
                app:layout_constraintBottom_toTopOf="@+id/edt_time"
                app:layout_constraintStart_toStartOf="@+id/edt_time" />

            <TextView
                android:id="@+id/edt_time"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/_24sdp"

                android:background="@drawable/bg_edit_text"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_8sdp"
                android:text="@string/select_time"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_date" />

            <TextView
                android:id="@+id/tvschedule"
                style="@style/normaltxt_14sp_bold"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_46"
                android:layout_marginTop="16dp"
                android:background="@drawable/common_btn_bg"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/edt_time"
                app:layout_constraintStart_toStartOf="@+id/edt_time"
                app:layout_constraintTop_toBottomOf="@+id/edt_time" />

            <!--            <include-->
            <!--                android:id="@+id/btn_login"-->
