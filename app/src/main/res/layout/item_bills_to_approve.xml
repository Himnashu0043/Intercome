<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_12sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_12sdp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/service_10_imge_shapeable_overloay"
            app:srcCompat="@drawable/ic_billing_list" />

        <TextView
            android:id="@+id/tv_bill_name"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/bold"
            android:textColor="#20222C"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/tv_price"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:textColor="#858585"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toStartOf="@+id/tv_timer"
            app:layout_constraintStart_toStartOf="@+id/tv_bill_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_flat_number" />

        <TextView
            android:id="@+id/tvPayManager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_contact_us_btn"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/pay"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/tv_paid_unpaid"
            app:layout_constraintEnd_toStartOf="@+id/tv_paid_unpaid"
            app:layout_constraintStart_toStartOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/tv_paid_unpaid" />

        <TextView
            android:id="@+id/tv_flat_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/semi_bold"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toEndOf="@+id/textView187"
            app:layout_constraintTop_toBottomOf="@+id/tv_bill_name" />

        <TextView
            android:id="@+id/textView187"
            style="@style/normaltxt_13sp_SemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flat_number"
            app:layout_constraintBottom_toBottomOf="@+id/tv_flat_number"
            app:layout_constraintStart_toStartOf="@+id/tv_bill_name"
            app:layout_constraintTop_toTopOf="@+id/tv_flat_number" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toTopOf="@+id/tv_flat_number"
            app:layout_constraintEnd_toStartOf="@+id/ivList" />


        <TextView
            android:id="@+id/tv_mark_as_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:text="Mark as Paid"
            android:textColor="#F1FDF2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bill_name" />


        <TextView
            android:id="@+id/tv_paid_unpaid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_contact_us_btn"
            android:fontFamily="@font/semi_bold"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/mark_as_paid"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvPayManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <ImageView
            android:id="@+id/ivList"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/list_icon"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_price" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listPop"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/light_grey"
            app:layout_constraintEnd_toStartOf="@+id/ivList"
            app:layout_constraintTop_toTopOf="@+id/ivList">

            <TextView
                android:id="@+id/tvEditBilling"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Edit"
                android:textColor="@color/lightBlack"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDeleteBilling"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Delete"
                android:textColor="@color/lightBlack"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditBilling" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewReceiptlistPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_grey"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/ivList"
            app:layout_constraintTop_toTopOf="@+id/ivList">

            <TextView
                android:id="@+id/tvViewRecient"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Bill Receipt"
                android:textColor="@color/lightBlack"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRejectManager"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Reject"
                android:textColor="@color/lightBlack"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvViewRecient" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_bill_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintEnd_toEndOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_bill_name"
            app:srcCompat="@drawable/ic_bill_download" />

        <ImageView
            android:id="@+id/ivEdit1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintEnd_toEndOf="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_bill_name"
            app:srcCompat="@drawable/edit_icon" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/semi_bold"
            android:text="00:00:21"
            android:textSize="@dimen/_9ssp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_flat_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>