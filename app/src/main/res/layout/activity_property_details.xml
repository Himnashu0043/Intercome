        android:text="@string/tv_property_details"
        android:textColor="#20222C"
        android:visibility="visible"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_communication1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_property_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_property_details">

        <ImageView
            android:id="@+id/iv_calling1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_calling_and_message"
            android:minWidth="@dimen/_40sdp"
            android:minHeight="@dimen/_40sdp"
            android:scaleType="center"
            app:layout_constraintEnd_toStartOf="@id/iv_message1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_calling" />

        <ImageView
            android:id="@+id/iv_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/bg_calling_and_message"
            android:minWidth="@dimen/_40sdp"
            android:minHeight="@dimen/_40sdp"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_calling1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_chatting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layRent"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/common_btn_bg"
        app:layout_constraintBottom_toBottomOf="@+id/tv_property_details"
        app:layout_constraintStart_toEndOf="@+id/tv_property_details"
        app:layout_constraintTop_toTopOf="@+id/tv_property_details">


        <TextView
            android:id="@+id/tv_property_type"
            style="@style/normaltxt_12sp_bold"
