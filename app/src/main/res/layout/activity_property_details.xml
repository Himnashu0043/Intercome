    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/layout_bedroom"
        app:layout_constraintStart_toStartOf="@+id/iv_property"
        app:layout_constraintTop_toBottomOf="@+id/tv_distance">

        <ImageView
            android:id="@+id/iv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_login_type_btn"
            android:backgroundTint="#F0FAF2"
            android:minWidth="@dimen/_24sdp"
            android:minHeight="@dimen/_24sdp"
            android:padding="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_distance" />

        <TextView
            android:id="@+id/tv_fit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/medium"
            android:textColor="#20222C"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_distance"
            app:layout_constraintStart_toEndOf="@+id/iv_distance"
            app:layout_constraintTop_toTopOf="@+id/iv_distance" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bedroom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/layout_bathroom"
        app:layout_constraintStart_toEndOf="@+id/layout_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_distance">

        <ImageView
            android:id="@+id/iv_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_login_type_btn"
            android:backgroundTint="#F0FAF2"
            android:minWidth="@dimen/_24sdp"
            android:minHeight="@dimen/_24sdp"
            android:padding="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_bed" />

        <TextView
            android:id="@+id/tv_bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/medium"
            android:textColor="#20222C"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bedroom"
            app:layout_constraintStart_toEndOf="@+id/iv_bedroom"
            app:layout_constraintTop_toTopOf="@+id/iv_bedroom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bathroom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_bedroom"
        app:layout_constraintTop_toBottomOf="@+id/tv_distance">

        <ImageView
            android:id="@+id/iv_bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/bg_login_type_btn"
            android:backgroundTint="#F4EAFB"
            android:minWidth="@dimen/_24sdp"
            android:minHeight="@dimen/_24sdp"
            android:padding="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_bathroom" />

        <TextView
            android:id="@+id/tv_bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:fontFamily="@font/medium"
            android:textColor="#20222C"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_bathroom"
            app:layout_constraintStart_toEndOf="@+id/iv_bathroom"
            app:layout_constraintTop_toTopOf="@+id/iv_bathroom" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/bg_edit_text"
        android:paddingBottom="@dimen/_8sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/layout_bathroom"
        app:layout_constraintStart_toStartOf="@+id/iv_property"
        app:layout_constraintTop_toBottomOf="@+id/layout_bathroom">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Circular"
            app:srcCompat="@drawable/properties_parking" />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/semi_bold"
            android:textColor="#20222C"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toStartOf="@+id/tv_owner"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />

        <TextView
            android:id="@+id/tv_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/semi_bold"
            android:text="Owner"
            android:textColor="#858585"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_profile_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_profile_name" />

        <TextView
            android:id="@+id/tv_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_receiver"
            android:drawablePadding="@dimen/_4sdp"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:text="+889956178900a"
            android:textColor="#858585"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/iv_profile"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile" />


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="@dimen/_4sdp"
            android:fontFamily="@font/semi_bold"
            android:gravity="left"
            android:text="zeeshan@gmail.com"
            android:textColor="#858585"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_owner"
            app:layout_constraintStart_toEndOf="@+id/tv_mobile_no"
            app:layout_constraintTop_toTopOf="@+id/tv_mobile_no" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvPropertyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/bold"
        android:text="@string/propertyid"
        android:textColor="#20222C"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/layout_distance"
        app:layout_constraintTop_toBottomOf="@+id/layout_bedroom" />

    <TextView
        android:id="@+id/tvGetPropertyId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/dark_grey"
        style="@style/normaltxt_13sp_Medium"
        app:layout_constraintBottom_toBottomOf="@+id/tvPropertyId"
        app:layout_constraintStart_toEndOf="@+id/tvPropertyId"
        app:layout_constraintTop_toTopOf="@+id/tvPropertyId" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bold"
        android:text="@string/details"
        android:textColor="#20222C"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toStartOf="@+id/layout_distance"
        app:layout_constraintTop_toBottomOf="@+id/tvPropertyId" />

    <TextView
        android:id="@+id/tv_details_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:textColor="#858585"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintEnd_toEndOf="@+id/layout_bathroom"
        app:layout_constraintStart_toStartOf="@+id/tv_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_details" />
    <TextView
        android:id="@+id/tv_readMore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Read More"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_desc"
        app:layout_constraintStart_toStartOf="@+id/tv_details_desc"
        app:layout_constraintTop_toBottomOf="@+id/tv_details_desc" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bold"
        android:text="@string/price"
        android:textColor="#20222C"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="@+id/tv_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_readMore" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:text="@string/monthly"
        android:textColor="#858585"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="@+id/tv_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_price" />

    <TextView
        android:id="@+id/tv_price_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/extra_bold"
        android:textColor="#20222C"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_duration"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_desc"
        app:layout_constraintTop_toTopOf="@+id/tv_duration" />



