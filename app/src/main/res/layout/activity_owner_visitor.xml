<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/visitorDrw"
    tools:openDrawer="start"
    tools:context=".owner.activity.ownerVisitor.OwnerVisitorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivRegular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:srcCompat="@drawable/bg_entry" />

        <TextView
            android:id="@+id/tvRegularEntry"
            style="@style/normaltxt_16sp_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_100"
            android:text="@string/regular_entry"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/ivRegular"
            app:layout_constraintStart_toStartOf="@+id/ivRegular"
            app:layout_constraintTop_toTopOf="@+id/ivRegular" />

        <ImageView
            android:id="@+id/ivVisHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/ivRegular"
            app:layout_constraintStart_toStartOf="@+id/ivRegular"
            app:layout_constraintTop_toBottomOf="@+id/ivRegular"
            app:srcCompat="@drawable/bg_entry" />

        <TextView
            android:id="@+id/tvVisitorHistory"
            style="@style/normaltxt_16sp_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/visitor_history"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/ivVisHistory"
            app:layout_constraintStart_toStartOf="@+id/ivVisHistory"
            app:layout_constraintTop_toTopOf="@+id/ivVisHistory" />

        <ImageView
            android:id="@+id/ivGatePassList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/ivVisHistory"
            app:layout_constraintStart_toStartOf="@+id/ivVisHistory"
            app:layout_constraintTop_toBottomOf="@+id/ivVisHistory"
            app:srcCompat="@drawable/bg_entry" />

        <TextView
            android:id="@+id/tvGatePassList"
            style="@style/normaltxt_16sp_extrabold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:text="@string/gatepass_list"
            android:textColor="@color/orange"
            app:layout_constraintBottom_toBottomOf="@+id/ivGatePassList"
            app:layout_constraintStart_toStartOf="@+id/ivGatePassList"
            app:layout_constraintTop_toTopOf="@+id/ivGatePassList" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="visible">

        <include
            android:id="@+id/nav"
            layout="@layout/user_nav_drw" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>