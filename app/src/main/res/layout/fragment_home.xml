                <!--                app:layout_constraintTop_toBottomOf="@+id/rv_home_service"-->
                <!--                tools:itemCount="20"-->
                <!--                tools:listitem="@layout/item_home_offer_banner" />-->

                <TextView
                    android:id="@+id/tv_parking_to_let"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/bold"
                    android:text="@string/parking_to_let"
                    android:textColor="#20222C"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_home_service" />

                <TextView
                    android:id="@+id/tv_parking_to_let_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/bold"
                    android:text="@string/view_all"
                    android:textColor="#FD701E"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_parking_to_let"
                    app:layout_constraintEnd_toEndOf="@+id/rv_home_service"
                    app:layout_constraintTop_toTopOf="@+id/tv_parking_to_let" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_parking_to_let"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="@+id/tv_property_view_all"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_parking_to_let"
                    tools:itemCount="20"
                    tools:listitem="@layout/item_home_properties" />

                <!--  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/rv_bottom_home_offer_banner"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="2dp"
                      android:layout_marginTop="@dimen/_8sdp"
                      android:layout_marginBottom="8dp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/rv_home_parking_to_let" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/view_pager111"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_home_parking_to_let" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout123"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:foregroundGravity="bottom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/view_pager111"
                    app:layout_constraintStart_toStartOf="@+id/view_pager111"
                    app:layout_constraintTop_toBottomOf="@+id/view_pager111"
                    app:tabBackground="@drawable/drawable_vp_tab_indicator_selector"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="0dp"
                    app:tabMaxWidth="0dp"
                    app:tabPaddingEnd="10dp"
                    app:tabPaddingStart="10dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


